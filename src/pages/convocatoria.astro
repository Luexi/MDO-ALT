---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.svelte';
import Footer from '../components/Footer.svelte';

const fechasClave = [
	{ mes: 'OCT', dia: '20', titulo: 'Inicio de Registro', descripcion: 'Apertura de plataforma electrónica' },
	{ mes: 'NOV', dia: '15', titulo: 'Examen EXANI III', descripcion: 'Evaluación de conocimientos' },
	{ mes: 'FEB', dia: '2026', titulo: 'Inicio de Cursos', descripcion: 'Semestre Febrero 2026', highlight: true }
];
---

<BaseLayout 
	title="Convocatoria 2026 - MDO UAGro"
	description="Consulta las bases, fechas importantes y requisitos para el proceso de selección de la Maestría en Dirección de Organizaciones."
>
	<Navbar client:load />
	
	<main class="min-h-screen bg-gray-50 py-12">
		<div class="max-w-7xl mx-auto px-4 sm:px-6">
			<!-- Page Header -->
			<div class="text-center mb-12">
				<h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4">
					Convocatoria <span class="text-uagro-navy">2026</span>
				</h1>
				<p class="text-lg text-gray-600 max-w-2xl mx-auto">
					Maestría en Dirección de Organizaciones. Consulta las bases, fechas importantes y requisitos para el proceso de selección.
				</p>
			</div>
			
			<div class="grid lg:grid-cols-12 gap-8 items-start">
				<!-- Main Content: Poster -->
				<div class="lg:col-span-8">
					<div class="bg-white rounded-2xl shadow-xl p-3 border border-gray-200">
						<div class="aspect-[3/4] bg-gradient-to-br from-uagro-navy to-uagro-navy/80 rounded-lg flex items-center justify-center text-white">
							<!-- Placeholder for official poster -->
							<div class="text-center p-8">
								<svg xmlns="http://www.w3.org/2000/svg" class="w-20 h-20 mx-auto mb-6 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
								</svg>
								<h2 class="text-3xl font-bold mb-4">Convocatoria Oficial 2026</h2>
								<p class="text-lg opacity-90 mb-2">MAESTRÍA EN</p>
								<p class="text-2xl font-bold mb-2">DIRECCIÓN DE</p>
								<p class="text-2xl font-bold mb-6">ORGANIZACIONES</p>
								<div class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-pill text-sm font-semibold">
									<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
									</svg>
									CONAHCYT
								</div>
							</div>
						</div>
					</div>
				</div>
				
				<!-- Sidebar -->
				<div class="lg:col-span-4 space-y-6">
					<!-- Fechas Clave -->
					<div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-200">
						<h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-uagro-red" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
							</svg>
							Fechas Clave
						</h3>
						<ul class="space-y-6">
							{fechasClave.map(fecha => (
								<li class="flex gap-4">
									<div class={`flex-shrink-0 w-12 h-12 rounded-lg flex flex-col items-center justify-center border ${fecha.highlight ? 'bg-red-50 border-uagro-red' : 'bg-blue-50 border-uagro-navy/20'}`}>
										<span class={`text-[10px] uppercase font-bold leading-none ${fecha.highlight ? 'text-uagro-red' : 'text-uagro-navy'}`}>{fecha.mes}</span>
										<span class={`text-lg font-bold ${fecha.highlight ? 'text-uagro-red' : 'text-uagro-navy'}`}>{fecha.dia}</span>
									</div>
									<div>
										<p class="text-sm font-semibold text-gray-900">{fecha.titulo}</p>
										<p class="text-xs text-gray-500">{fecha.descripcion}</p>
									</div>
								</li>
							))}
						</ul>
						
						<!-- CTAs -->
						<div class="mt-8 pt-8 border-t border-gray-200 space-y-4">
							<a 
								href="#" 
								class="w-full flex items-center justify-center gap-3 bg-uagro-red hover:bg-uagro-red-dark text-white font-bold py-4 px-6 rounded-pill transition-all shadow-lg shadow-uagro-red/20"
							>
								<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
								</svg>
								Descargar PDF
							</a>
							<a 
								href="#" 
								class="w-full flex items-center justify-center gap-3 bg-uagro-navy hover:bg-uagro-navy/90 text-white font-bold py-4 px-6 rounded-pill transition-all shadow-lg shadow-uagro-navy/20"
							>
								<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
								</svg>
								Iniciar Pre-Registro
							</a>
						</div>
					</div>
					
					<!-- Contacto -->
					<div class="bg-gray-100 rounded-2xl p-6">
						<h4 class="text-sm font-bold uppercase tracking-wider text-gray-500 mb-4">¿Dudas sobre el proceso?</h4>
						<div class="space-y-4 text-sm">
							<div class="flex items-center gap-3">
								<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-uagro-navy" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
								<span class="text-gray-700">m.direcciondeorganizaciones@uagro.mx</span>
							</div>
							<div class="flex items-center gap-3">
								<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-uagro-navy" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
								</svg>
								<span class="text-gray-700">744 134 0900, ext. 4477</span>
							</div>
						</div>
					</div>
					
					<!-- Important Note -->
					<div class="bg-red-50 border-l-4 border-uagro-red p-4 rounded-r-lg">
						<div class="flex gap-3">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-uagro-red shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
							</svg>
							<p class="text-xs leading-relaxed text-red-900">
								<strong>Nota importante:</strong> Estar admitido en un posgrado no garantiza la asignación de una beca, ésta la realiza la SECIHTI en dependencia del presupuesto federal.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
	
	<Footer client:load />
</BaseLayout>
